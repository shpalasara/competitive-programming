#include<stdio.h>

int abst(int x,int y)
{
	if(x>y)
		return x-y;
	return y-x;
}

int main()
{
	int T,N,i,j,data_0,data_N,temp_b,temp_e;
	long long int ans;
	scanf("%d",&T);
	while(T--)
	{
		ans=0;
		scanf("%d",&N);
		int data[N-2];
		scanf("%d",&data_0);
		for(i=0;;i<N-2;i++)
			scanf("%d",&data[i]);
		
		scanf("%d",&data_N);
		ans=abst(data_0,data_N);
		for()
	}
	return 0;
}

//S=∑i=1⌊N2⌋|Pi−PN−i+1|
